<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons
          Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
  <formset>
    <form name="registerUser">
      <field property="username" depends="required">
        <arg0 key="user.username"/>
      </field>
      <field property="password" depends="required">
        <arg0 key="user.password"/>
      </field>
      <field property="confirmPassword" depends="required,validwhen">
        <arg key="user.confirmPassword"/>
        <msg name="validwhen" key="errors.passwords.match"/>
        <var>
          <var-name>test</var-name>
          <var-value>(password == *this*)</var-value>
        </var>
      </field>
      <field property="forename" depends="required">
        <arg key="user.forename"/>
      </field>
      <field property="lastname" depends="required">
        <arg key="user.lastname"/>
      </field>
      <field property="phone" depends="required">
        <arg key="user.phone"/>
      </field>
      <field property="email" depends="required,email">
        <arg key="user.email"/>
      </field>
      <field property="domain" depends="required">
        <arg key="user.domain"/>
      </field>
      <field property="message" depends="required">
        <arg key="user.message"/>
      </field>
      <field property="street" depends="required">
        <arg key="user.street"/>
      </field>
      <field property="zip" depends="required">
        <arg key="user.zip"/>
      </field>
      <field property="city" depends="required">
        <arg key="user.city"/>
      </field>
    </form>
  </formset>
</form-validation>
